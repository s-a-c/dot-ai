{
    "name": "s-a-c/apply-doc-standards",
    "description": "PHP Documentation Standards Application Tool - Apply consistent documentation structure and formatting to files and folders",
    "type": "library",
    "keywords": [
        "documentation-standards",
        "markdown",
        "documentation",
        "content-formatting",
        "toc-generation",
        "documentation-tools",
        "quality-assurance",
        "content-standards"
    ],
    "homepage": "https://github.com/s-a-c/apply-doc-standards",
    "license": "MIT",
    "authors": [
        {
            "name": "StandAloneComplex",
            "email": "71233932+s-a-c@users.noreply.github.com",
            "homepage": "https://github.com/s-a-c",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "pestphp/pest": "^2.36",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "SAC\\ApplyDocStandards\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SAC\\ApplyDocStandards\\Tests\\": "tests/"
        }
    },
    "bin": [
        "apply-doc-standards"
    ],
    "scripts": {
        "test": "pest",
        "test:unit": "pest tests/Unit/",
        "test:integration": "pest tests/Integration/",
        "test:coverage": "pest --coverage --coverage-html=coverage-html",
        "analyse": "phpstan analyse src/ --level=10",
        "cs-fix": "php-cs-fixer fix src/",
        "cs-check": "php-cs-fixer fix src/ --dry-run --diff",
        "quality": [
            "@cs-check",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/s-a-c/apply-doc-standards/issues",
        "source": "https://github.com/s-a-c/apply-doc-standards",
        "docs": "https://github.com/s-a-c/apply-doc-standards/blob/main/README.md"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}
